{
  "name": "dangerous-inclinations",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "engine",
    "ui",
    "server"
  ],
  "scripts": {
    "dev": "yarn workspace @dangerous-inclinations/ui dev",
    "dev:server": "yarn workspace @dangerous-inclinations/server dev",
    "dev:all": "concurrently \"yarn dev:server\" \"yarn dev\"",
    "build": "yarn workspaces foreach -pt run build",
    "build:engine": "yarn workspace @dangerous-inclinations/engine build",
    "build:ui": "yarn workspace @dangerous-inclinations/ui build",
    "build:server": "yarn workspace @dangerous-inclinations/server build",
    "test": "yarn workspace @dangerous-inclinations/engine test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.6.2"
  },
  "packageManager": "yarn@4.12.0"
}
